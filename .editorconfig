# EditorConfig: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = false

[*.html]
indent_style = tab
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.{css,sass,scss}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
